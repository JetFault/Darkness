			return this._tiles.width;
		}
		
		/**
		 * Get the start point in tiles
		 * @return
		 */
		public function getStartTile():FlxPoint {
			var flxpoint:FlxPoint = new FlxPoint(0, 0);	
			flxpoint.copyFromFlash(this.maze.getStartTile());
			return flxpoint;
		}
		
